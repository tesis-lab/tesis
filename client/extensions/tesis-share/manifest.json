{
  "manifest_version": 2,
  "minimum_chrome_version": "34",
  "name": "Tesis Screen Sharing and Recording",
  "short_name": "Tesis",
  "description": "Tesis Tab recording. Based off Skyroom and Chromium tab tabCapture demo",
  "permissions": ["desktopCapture", "tabCapture", "tabs"],
  "version": "2.0",

  "content_scripts": {
    "matches": ["https://localhost:8443/*"],
    "js": ["jquery-3.1.1.min.js","script.js", "recorder.js"]
  },

  "browser_action": {
    "default_icon": "tesis-icon.png",
    "default_popup": "popup.html"
  },

  "icons": {
    "16": "tesis-icon.png",
    "48": "tesis-icon.png",
    "128": "tesis-icon.png"
  }

}
